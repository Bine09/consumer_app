<div class="container">

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th  scope="col">First name</th>
      <th  scope="col">Last name</th>
      <th  scope="col">Email</th>
      <th colspan="3">Action</th>
      <th colspan="3">Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class:'diverselinkslogin' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'diverselinkslogin' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'diverselinkslogin' %></td>
        <td><%= user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:'btn btn-light' %>

</div>
