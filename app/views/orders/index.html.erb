<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm">
      <h4>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order, class:'text-info' %>
      </h4>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col -->
  <% end %>
</div>
