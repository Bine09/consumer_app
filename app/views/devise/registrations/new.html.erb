<div class="container">

  <h2 class="alert alert-info">Please, sign up!</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource%>

<form>

  <div class="form-group">

    <%= f.label :email%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-sm"  %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control-sm" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-sm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-warning btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</form>

</div>
