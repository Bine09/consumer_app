<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Your Comment", class:'text-white' %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating"></div>
    </p>
    <p>
      <%= f.submit "Submit", class: 'btn btn-info' %>
    </p>
  <% end %>
<% else %>
 <p> You need to be logged in, in order to write a comment!</p>
<% end %>
