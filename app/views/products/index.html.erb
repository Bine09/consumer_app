<!-- This is a basic Ruby loop. @products is an instance variable that contains an array of several products.
It's been defined in the controller, which is why you can access it. .each  -->
<!-- will loop through all the products and run the code before the -->
<!--  < % end %> for each product that exists. -->
<div class="container-fluid">
  <div class="row" >
    <% @products.each do |product| %>
          <div class="col-xs-6 col-sm-4 col-md-2 col-lg-2" id="productFields">
          <a href="#"><h2><%= product.name %></h2></a>
          <p id="descriptionField"><%= product.description %></p>
          <p id="colorField"><%= product.color %></p>
          <p id="imageStyle"><%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %></p>
          <!-- added placeholder for imageurl that are in the folder images-->
          <strong id="bikeprice"><%= product.price %>,-€</strong>
          <br>
          <br>
          <button class="btn btn-light btn-sm" type="button"><%= link_to 'Show', product %></button>
          <button class="btn btn-light btn-sm" type="button"><%= link_to 'Edit', edit_product_path(product) %></button>
          <button class="btn btn-warning btn-sm" type="button"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div><!-- /col -->

      <% end %>

      </div>
      </div>


