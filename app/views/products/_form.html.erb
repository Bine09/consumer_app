<!-- If a user tries to enter invalid data into the form, the validations will flash an appropriate error message to a user and reload the form page.  -->


<div class="container">

  <%= form_with(model: product, local: true) do |form| %>
  <!-- In this case, the product will either be a new Product instance or an existing one loaded from the database, depending on whether you are viewing the new or the edit page. -->
    <% if product.errors.any? %>
       <div id="error_explanation">
        <h2 class= 'alert-light' ><%= pluralize(product.errors.count, "error")%> prohibited this product from being saved:</h2>


        <% product.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>


    <% end %>

  <div class="form-group row">
    <%= form.label :name, class:'col-sm-5 col-form-label' %>
    <%= form.text_field :name, class:'col-sm-5'  %>
  </div>

  <div class="form-group row" >
    <%= form.label :description, class:'col-sm-5 col-form-label' %>
    <%= form.text_area :description, class:'col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :color, class:'col-sm-5 col-form-label'  %><br>
    <%= form.text_field :color, class:'col-sm-5'  %>
  </div>

  <div class="form-group row">
    <%= form.label :price, class:'col-sm-5 col-form-label'  %><br>
    <%= form.text_field :price, class:'col-sm-5'  %>
  </div>

  <div class="form-group row">
    <%= form.label :image_url, class:'col-sm-5 col-form-label'  %>
    <%= form.text_field :image_url, class:'col-sm-5'  %>
  </div>
  <br>
  <br>
  <div class="action">
    <%= form.submit "Submit", class: 'btn btn-info col-md-2'  %>
  </div>

<% end %>

</div>
</div>
