<!-- shows product details  -->

<p id="notice"><%= notice %></p>

  <div class="jumbotron">
    <div class="row">
        <div class="col-sm">
          <strong>Name:</strong>
          <%= @product.name %>
        </div>
    </div>

    <div class="row">
      <div class="col-sm">
        <strong>Description:</strong>
        <%= @product.description %>
      </div>
    </div>

      <div class="row">
        <div class="col-sm">
          <strong>Color:</strong>
          <%= @product.color %>
        </div>
      </div>

        <div class="row">
            <div class="col-sm">
          <strong><i class="fas fa-euro-sign"></i> Price:</strong>
          <%= @product.price %>
        </div>
        </div>

        <div class="row">
            <div class="col-sm">
          <strong>Image url:</strong>
          <%= @product.image_url %>
        </div>
        </div>

        <div class="row">
            <div class="col-sm">
          <strong><i class="far fa-comment-alt"></i> Comments:</strong>
          <%= @product.highest_rating_comment %>
        </div>
        </div>

        <div class="row">
            <div class="col-sm">
          <strong><i class="far fa-comment-alt"></i> Comments:</strong>
          <%= @product.lowest_rating_comment %>
        </div>
      </div>

        <div class="row">
            <div class="col-sm">
              <%= link_to 'Edit', edit_product_path(@product), :class => "link", class:'text-dark' %> |
              <%= link_to 'Back', products_path, :class => "link", class:'text-dark'  %>
        </div>
    </div>
  </div>
